# Deployment Settings
DEPLOY_HOST=your-server-ip
DEPLOY_USER=root  # Usually 'root' for fresh servers

# Ghost Settings
GHOST_URL=https://your-domain.com  # Your domain name (with https://)
GHOST_THEMES_DIR=./themes  # Path to your themes directory

# Database Settings (you can leave these as is for development)
DB_NAME=ghost
DB_USER=ghost
DB_PASSWORD=ghost_db_password_123
DB_ROOT_PASSWORD=mysql_root_password_123

# Email Settings (required for password reset and notifications)
MAIL_FROM=your-blog@your-domain.com  # The email address Ghost will send from
MAIL_TRANSPORT=SMTP
MAIL_HOST=smtp.gmail.com  # For Gmail. Change if using another provider
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password  # For Gmail, use App Password

# SSL Settings (required for HTTPS)
LETSENCRYPT_EMAIL=your-email@gmail.com  # Email for SSL certificate notifications 